# shellcheck shell=sh

. ./error-handler

# handles downloading files on a per-file basis
# can optionally download hashes instead

download() {
  bad_first_opt="Download method was called without a valid filename input."
  bad_second_opt='Specify "file" or "hash" to download.'

  if [ "$3" ]
  then
    fail "Too many arguments."
  fi

  if [ "$2" ]
  then
    case "$2" in
      f*) ;;
      h*) ;;
      *) fail "$bad_second_opt"
    esac
  else
    fail "$bad_second_opt"
  fi

  if [ "$1" ]
  then
    case "$1" in
      e*) get_ea_jdk "$2";;
      *) fail "$bad_first_opt"
    esac
  else
    fail "$bad_first_opt"
  fi
}

get_ea_jdk() {
  true
}
